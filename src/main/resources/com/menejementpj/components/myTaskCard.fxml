<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<HBox alignment="CENTER_LEFT" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.menejementpj.components.TaskItemController">
   <children>
      <Rectangle arcHeight="5" arcWidth="5" fill="#4CAF50" height="40" width="10" />
      <VBox HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="titleTask" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Perencanaan Siput Balap" />
            <Label fx:id="subTitleTask" style="-fx-font-size: 12px; -fx-text-fill: #555555;" text="Penyedia Siput" />
         </children>
      </VBox>
      <Label fx:id="proggresTask" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #4CAF50;" text="100%" />
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
   </padding>
</HBox>
